%% Font definition
\usepackage{amsmath} % Must load definitions of command before font settings
\usepackage{fontspec}
\usepackage{unicode-math} % Must be placed here before any font settings
\setmainfont{Libertinus Serif}
\setsansfont{Libertinus Sans}
\setmonofont[Scale=MatchLowercase]{Libertinus Mono}

% Use latin modern for math symbols
\setmathfont{XITS Math} % Using latin modern symbols by default

% Fall back to main font for latin and numerical characters
\setmathfont[range=\mathit/{latin,Latin,num}]{LibertinusSerif-Italic}
\setmathfont[range=\mathup/{latin,Latin,num}]{LibertinusSerif-Regular}
\setmathfont[range=\mathbfup/{latin,Latin,num}]{LibertinusSerif-Bold}
\setmathfont[range=\mathbfit/{latin,Latin,num}]{LibertinusSerif-BoldItalic}

% Additional character
\setmathfont[range={"221E}]{Libertinus Serif}% "0221E = \infty
